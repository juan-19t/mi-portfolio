<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="benefits_view_form" model="ir.ui.view">
            <field name="name">benefits.view.form</field>
            <field name="model">benefits</field>
            <field name="arch" type="xml">
                <form string="Benefits">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="active" widget='boolean_toggle' />
                        </group>
                        <group>
                            <div class="oe_chatter">
                                <field name="message_ids" widget="mail_thread"/>
                                <field name="activity_ids" widget="mail_activity"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="benefits_view_tree" model="ir.ui.view">
            <field name="name">benefits.view.tree</field>
            <field name="model">benefits</field>
            <field name="arch" type="xml">
                <tree string="Benefits">
                    <field name="name" />
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="benefits_action" model="ir.actions.act_window">
            <field name="name">Benefits</field>
            <field name="res_model">benefits</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
