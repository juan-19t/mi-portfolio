<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="banks_view_form" model="ir.ui.view">
            <field name="name">banks.view.form</field>
            <field name="model">banks</field>
            <field name="arch" type="xml">
                <form string="Banks">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="active" widget='boolean_toggle'/>
                        </group>
                        <group>
                            <div class="oe_chatter">
                                <field name="message_ids" widget="mail_thread"/>
                                <field name="activity_ids" widget="mail_activity"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="banks_view_tree" model="ir.ui.view">
            <field name="name">banks.view.tree</field>
            <field name="model">banks</field>
            <field name="arch" type="xml">
                <tree string="Banks">
                    <field name="name" />
                    <field name="active" />
                </tree>
            </field>
        </record>
        
        <record id="nomina_action" model="ir.actions.act_window">
            <field name="name">Banks</field>
            <field name="res_model">banks</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
